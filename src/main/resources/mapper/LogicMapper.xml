<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lifuyi.dev_monitor.dao.LogicMapper">

    <delete id="clearByLogicId">
        delete from logic_relation where logic_id=#{logic_id}
    </delete>

    <insert id="insertOrUpdateLogicNode" parameterType="com.lifuyi.dev_monitor.model.logic.LogicNode">
        insert into logic_node(logic_id,logic_code,logic_name,enterprise_id)
        values (#{logic_id},#{logic_code},#{logic_name},#{enterprise_id})
        ON DUPLICATE KEY UPDATE
        logic_code=#{logic_code},logic_name=#{logic_name},enterprise_id=#{enterprise_id}
    </insert>

    <insert id="insertRelation">
        insert into logic_relation(logic_id,physical_id,physical_code)
        values (#{logic_id},#{physical_id},#{code})
    </insert>

</mapper>